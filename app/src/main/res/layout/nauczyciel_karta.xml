                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="8dp"
                android:text="Arya"
                android:textColor="@color/black"
                android:textSize="20sp" />
